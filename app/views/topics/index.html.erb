<p id="notice"><%= notice %></p>
<h1> <%= t('Topics')%> </h1>
<table>
  <thead>
    <tr>
      <th> <%=t('title') %></th>
      <th> <%=  t('description')%></th>
      <th> <%= t('Stars') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td>  <%= topic.description %></td>
        <td><%= topic.votes.count %></td>
        <td><%= link_to t('Show'), topic_path(topic) %></td>
        <td><%= link_to t('Edit'), edit_topic_path(topic) %></td>
        <td><%= link_to t('Destroy'), topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td> <%= link_to t('vote'),   votes_new_path %> </td>

      </tr>
         <% end %>
  </tbody>
</table>

<br>
